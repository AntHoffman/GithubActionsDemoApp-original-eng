@{
}

<h2>List of people</h2>

<div>
    <a class="btn btn-primary" asp-action="Create">Create a new person</a>
</div>

@if (Model.People.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model.People)
            {
                <tr>
                    <td>
                        @person.Name
                    </td>
                    <td>
                        <a class="me-2 btn btn-primary" asp-action="Edit" asp-route-id="@person.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>There's nothing to display...</p>
}